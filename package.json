{
  "name": "open-adopt",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "NODE_ENV=test && jest",
    "lint": "$(npm bin)/eslint app __tests__ index.android.js index.ios.js"
