  "react-native": {
    "node-fetch": false
  },
  "description": "An open source pet adoption application built with React Native.",
  "main": "index.ios.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bendman/open-adopt.git"
  },
  "keywords": [
    "react-native",
    "react",
    "javascript",
    "pet",
    "adoption",
    "api"
